{
  "name": "words-roulette",
  "version": "0.1.0",
  "private": false,
  "homepage": "http://words-roulette.herokuapp.com",
  "license": "MIT",
  "dependencies": {
    "@material-ui/core": "^3.8.1",
    "@material-ui/icons": "^3.0.1",
    "firebase": "^7.6.0",
    "history": "^4.7.2",
    "lodash": "^4.17.11",
    "nanoid": "^2.0.1",
    "prop-types": "^15.6.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-redux": "^6.0.0",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^2.1.3",
    "recompose": "^0.30.0",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "typeface-roboto": "0.0.54"
  },
  "devDependencies": {
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "webpack-bundle-analyzer": "^3.6.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src/",
    "lint:fix": "eslint --debug src/ --fix",
    "prettier": "prettier --write 'src/**/*.js'",
    "stat:build": "react-scripts build --stats",
    "stat:run": "npx webpack-bundle-analyzer ./build/bundle-stats.json",
    "stat": "yarn stat:build && yarn stat:run"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/*.js": [
      "eslint --max-warnings=0",
      "git add"
    ],
    "src/*.{html,js,json,scss}": [
      "prettier --write",
      "git add"
    ]
  }
}
